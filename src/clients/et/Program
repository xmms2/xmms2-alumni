target="xmms2-et"
source=["xmms2-et.c"]

def config(env):
	env.Prepend(LIBPATH="src/clients/lib/xmmsclient")
	env.Append(LIBS=["xmmsclient"])
	env.Prepend(LIBPATH="src/clients/lib/xmmsclient-glib")
	env.Append(LIBS=["xmmsclient-glib"])
	env.pkgconfig("glib-2.0")
	
	if env.platform == 'sunos5':
		env.checklib("socket", "socket", fail=True)
		env.checklib("resolv", "inet_aton", fail=True)
	env.add_script("startup.d", "src/clients/et/xmms2-et-launcher.sh")

