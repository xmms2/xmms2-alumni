from waftools import tool

def build(bld):
    obj = bld.create_obj('cc', 'shlib')
    obj.target = 'xmmsclient-ecore'
    obj.includes = '../../../include'
    obj.source = 'xmmsclient-ecore.c'
    obj.uselib = 'ecore'
    obj.uselib_local = 'xmmsclient'
    obj.vnum = '1.0.0'
    tool.add_install_flag(bld, obj)

def configure(conf):
    if conf.check_pkg('ecore', destvar='ecore'):
        conf.env.append_value('XMMS_PKGCONF_FILES', 
                              ('xmms2-client-ecore', '-lxmmsclient-ecore'))
        return True
    return False

def set_options(opt):
    pass
