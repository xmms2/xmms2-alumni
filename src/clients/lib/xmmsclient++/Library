target="xmmsclient++"
systemlibrary=True

source=["client.cpp",
		"dict.cpp",
		"exceptions.cpp",
		"list.cpp",
		"listener.cpp",
		"mainloop.cpp",
		"medialib.cpp",
		"config.cpp",
		"stats.cpp",
		"playback.cpp",
		"signal.cpp",
		"playlist.cpp"]

def config(env):
	env.Append(LIBS=["xmmsclient"])
	env.Prepend(LIBPATH="src/clients/lib/xmmsclient")
	env.checkcppheader("boost/signal.hpp")
	env.checklib("boost_signals", "boost::signals::connection::connection", "#include <boost/signal.hpp>", "cpp")
