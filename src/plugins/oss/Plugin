target="oss"
source=["oss.c"]

output_priority = 2

def config(env):
	env.checkheader("sys/soundcard.h")
	try:
		env.checklib("ossaudio", "_oss_ioctl")
	except ConfigError:
		pass #only some platforms need it...

	if platform in ['netbsd', 'openbsd']:
		env.Append(CPPFLAGS=['-DDEFAULT_DEVICE=\\"/dev/audio\\"'])
	else:
		env.Append(CPPFLAGS=['-DDEFAULT_DEVICE=\\"/dev/dsp\\"'])
