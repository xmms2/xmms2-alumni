<?xml version="1.0" encoding="utf-8"?>

<ipc version="1">

	<enum name="playback_status">
		<prop name="STOP" />
		<prop name="START" />
		<prop name="PAUSE" />
	</enum>

	<enum name="output_cmd">
		<prop name="START" />
		<prop name="STOP" />
		<prop name="PAUSE" />
		<prop name="STATUS" />
	</enum>

	<enum name="playlist_cmd">
		<prop name="ADD_ID" />
		<prop name="CURRENT_POS" />
		<prop name="LIST_ENTRIES" />
		<prop name="CLEAR" />
	</enum>

	<enum name="message">
		<prop name="REPLY" />
		<prop name="ERROR" />
	</enum>

	<object name="main" type="both">
		<method name="hello">
			<arg name="protocolver">
				<type>
					<uint />
				</type>
			</arg>

			<arg name="client">
				<type>
					<string />
				</type>
			</arg>

			<retval>
				<type>
					<uint />
				</type>
			</retval>
		</method>

		<method name="quit">
			<retval>
				<type>
					<none />
				</type>
			</retval>
		</method>
	</object>

	<object name="playlist" type="both">
		<prop name="pos">
			<readable />
			<writeable />
			<type>
				<int />
			</type>
		</prop>

		<method name="list">
			<retval>
				<type>
					<list>
						<string />
					</list>
				</type>
			</retval>
		</method>

		<method name="create">
			<arg name="name">
				<type>
					<string />
				</type>
			</arg>
			<retval>
				<type>
					<none />
				</type>
			</retval>
		</method>

		<method name="load">
			<arg name="name">
				<type>
					<string />
				</type>
			</arg>
			<retval>
				<type>
					<none />
				</type>
			</retval>
		</method>

		<method name="add_id">
			<arg name="id">
				<type>
					<uint />
				</type>
			</arg>
			<retval>
				<type>
					<none />
				</type>
			</retval>
		</method>

		<method name="clear">
			<arg name="playlist">
				<type>
					<string />
				</type>
			</arg>
			<retval>
				<type>
					<none />
				</type>
			</retval>
		</method>

		<method name="set_pos_rel">
			<arg name="pos">
				<type>
					<int />
				</type>
			</arg>
			<retval>
				<type>
					<none />
				</type>
			</retval>
		</method>

	</object>

	<object name="playback" type="client">
		<prop name="status">
			<readable />
			<type>
				<enum name="playback_status" />
			</type>
		</prop>

		<method name="stop">
			<retval>
				<type>
					<none />
				</type>
			</retval>
		</method>

		<method name="start">
			<retval>
				<type>
					<none />
				</type>
			</retval>
		</method>

	</object>

	<object name="output" type="server">
		<method name="start">
			<retval>
				<type>
					<none />
				</type>
			</retval>
		</method>

		<method name="stop">
			<retval>
				<type>
					<none />
				</type>
			</retval>
		</method>

		<method name="pause">
			<retval>
				<type>
					<none />
				</type>
			</retval>
		</method>

		<method name="status">
			<retval>
				<type>
					<int />
				</type>
			</retval>
		</method>

		<method name="kill">
			<retval>
				<type>
					<none />
				</type>
			</retval>
		</method>

	</object>

</ipc>

